{
  "name": "@ha-assistant/web-admin",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "dev": "cross-env NODE_ENV=production webpack serve --mode development",
    "start": "webpack serve",
    "lint": "eslint \"src/*\"",
    "copy": "copy-files-from-to",
    "release": "npm run build && npm run copy"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@ha-assistant/listner": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rxjs": "^7.5.5",
    "@uiw/react-codemirror": "^4.11.1",
    "@codemirror/lang-json": "^6.0.0",
    "react-use-websocket": "^4.2.0",
    "react-hook-form": "^7.33.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.18.6",
    "@types/node": "^16.0.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.7.1",
    "dotenv-webpack": "^8.0.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^2.6.1",
    "sass": "^1.35.2",
    "sass-loader": "^13.0.2",
    "source-map-loader": "^4.0.0",
    "typescript": "^4.1.0",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^4.9.3",
    "copy-files-from-to": "^3.2.2",
    "cross-env": "^7.0.3"
  },
  "copyFiles": [
    {
      "from": "dist/*",
      "to": "../../local_google/rootfs/www/public"
    }
  ],
  "copyFilesSettings": {
    "whenFileExists": "overwrite"
  }
}