{
  "name": "@ha-assistant/web-admin",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "dev": "cross-env NODE_ENV=production webpack serve --mode development",
    "start": "webpack serve",
    "lint": "eslint \"src/*\"",
    "copy": "copy-files-from-to",
    "release": "npm run build && npm run copy"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.16.0",
    "@codemirror/lang-javascript": "^6.2.2",
    "@ha-assistant/listner": "^1.0.0",
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "codemirror": "^6.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.4",
    "react-use-websocket": "^4.8.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@types/node": "^16.18.97",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "babel-loader": "^9.1.3",
    "copy-files-from-to": "^3.9.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.11.0",
    "dotenv-webpack": "^8.1.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.0",
    "sass": "^1.77.0",
    "sass-loader": "^13.3.3",
    "source-map-loader": "^4.0.2",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  },
  "copyFiles": [
    {
      "from": "dist/*",
      "to": "../../local_google/rootfs/www/public"
    }
  ],
  "copyFilesSettings": {
    "whenFileExists": "overwrite"
  }
}
