{
  "name": "@ha-assistant/server",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "start": "run-p dev:build dev:run",
    "dev:build": "cross-env NODE_ENV=development webpack --watch --mode development",
    "dev:run": "node-dev dist/index.js",
    "build": "cross-env NODE_ENV=production webpack",
    "copy": "copy-files-from-to",
    "release": "npm run build && npm run copy"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "actions-on-google": "^3.0.0",
    "axios": "^1.6.8",
    "bufferutil": "^4.0.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "googleapis": "^133.0.0",
    "rxjs": "^7.8.1",
    "utf-8-validate": "^5.0.10",
    "ws": "^8.17.0"
  },
  "peerDependencies": {
    "@ha-assistant/listner": "^1.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^16.18.97",
    "copy-files-from-to": "^3.9.1",
    "node-dev": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "ts-node-dev": "^2.0.0"
  },
  "copyFiles": [
    {
      "from": "dist/*",
      "to": "../../local_google/rootfs/www/server"
    },
    {
      "from": "package.json",
      "to": "../../local_google/rootfs/www/package.json"
    }
  ],
  "copyFilesSettings": {
    "whenFileExists": "overwrite"
  }
}
